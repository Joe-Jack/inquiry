
<h3>
    訂正してください
</h3>
<%= form_for(@question) do |f| %>
  
  <div class="field">
  <%= f.label :name, "名前" %><br>
  <%= f.text_field :name, value: @question.name %>
  </div>
  <div class="field">
  <%= f.label :address, "メールアドレス" %><br>
  <%= f.email_field :address, value: @question.address %>
  </div>
  <div class="content">
  <%= f.label :text, "内容" %><br>
  <%= f.text_area :text, value: @question.text %>
  </div>
  <div class="actions">
  <%= f.submit "送信する" %>
  </div>
<% end %>



<div class="links">
<%= link_to '戻る', '/questions' %>
</div>