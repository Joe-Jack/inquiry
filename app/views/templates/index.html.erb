<h1>お問い合わせフォーム</h1>

<table>
  <thead>
    <tr>
      <th>お名前</th>
      <th>メール</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @templates.each do |template| %>
      <tr>
        <td><%= template.name %></td>
        <td><%= template.email %></td>
        <td><%= template.text %></td>
        <td><%= link_to 'Show', template %></td>
        <td><%= link_to 'Edit', edit_template_path(template) %></td>
        <td><%= link_to 'Destroy', template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="link">
<%= link_to 'お問い合わせフォームへ', new_template_path %>
</div>